<div class="navi-users-dashboard">
  <h2 class="navi-users-dashboard__heading">Manage Users</h2>
  <div class="navi-users-dashboard__tools">
    <DenaliButton @icon="user-add" @style="solid" @iconOnly={{true}}
      {{on "click" (fn (mut this.isAddUserModalOpen) true)}} class="navi-users-dashboard__tools-add-user" />
    <NaviNewUserModal @isUserModalOpen={{this.isAddUserModalOpen}} @toggleModal={{toggle "isAddUserModalOpen" this}} @addUser={{this.addUser}} />
    <DenaliInput type="text" placeholder="Search" @iconBack="true"
      @iconBackClass="d-search is-brand-300 navi-users-dashboard__tools-user-search" />
    <div class="navi-users-dashboard__tools--spacer" />
    <DenaliChip @textColor="brand" class="navi-users-dashboard__tools-chip">{{this.userCount}}</DenaliChip>
    <h6 class="upper is-grey-600 navi-users-dashboard__tools-user-label">TOTAL USERS</h6>
  </div>
  <EmberTable @class="table is-striped" as |t|>
    <t.head @columns={{this.columns}} />

    <t.body @rows={{this.rows}}
    @staticHeight={{true}}
      @estimateRowHeight={{41}} as |b|>
      <b.row as |r|>
        <r.cell as |value|>
          {{value}}
        </r.cell>
      </b.row>
    </t.body>
  </EmberTable>
